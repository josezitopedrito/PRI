extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 PÃ¡gina Individual
            table.w3-table-all
                tr
                    th Identificador
                    th Nome
                    th Curso
                    th Notas
                tr
                    td= al.identificador
                    td= al.nome
                    td= al.curso
                    td
                        table.w3-table-all    
                            tr
                                th Unidade Curricular
                                th Nota
                            each i in al.notas
                                tr
                                    td=i.indicador
                                    td=i.nota
            .w3-container
                form.w3-container(action='/alunos/' + al.identificador + '/notas' method='POST')
                    label 
                        b Indicador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='indicador')
                    label 
                        b Nota
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nota')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
            .w3-card-4
            table.w3-table-all
                each i in al.notas
                    tr
                        td=i.indicador
                        td 
                            button.w3-button.w3-circle.w3-blue-grey(onclick="apagaNota('" + al.identificador + "','"+ i.indicador + "')") Apagar

        footer.w3-container.w3-teal
            address Gerado por Lista de Compras App::
